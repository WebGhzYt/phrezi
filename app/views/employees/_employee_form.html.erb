<%= simple_form_for :employee , :url => employees_path , :html=>{:class=> "form-horizontal", :id=>"add-employee-frm" ,:method=>"POST"} ,:remote => true  do |f|%>
  <div class="form-group">
    <label class="control-label col-sm-4">Employee Email</label>
    <div class="col-sm-8">
      <%= email_field_tag :email, nil , :class => "form-control", :required => true %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4">Employee Access</label>
    <div class="col-sm-8">
      <%= f.select :role, roles, {prompt: "Select Role"}, {class: "form-control", :required => true} %>
    </div>
  </div>
  <%#= f.input :user_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" } %>
  <p class="text-right">
    <button type="submit" class="btn btn-primary">Add</button>
  </p>
<%end%>
  