<%= simple_form_for :menu_item , :url => menu_items_path , :html=> {:class => "form-horizontal" , :id => "menu_items_validations"}, :remote=>true do |f| %>
  <div class="form-group">
    <label class="col-sm-4 control-label text-right">Menu Item Name</label>
    <div class="col-sm-8"><%= f.text_field :name , :class => "form-control", :required => true %></div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label text-right">Category</label>
    <div class="col-sm-88"><%= f.select :category, Category.all_categories(current_establishment), {prompt: "#{Category.all_categories(current_establishment).size > 0 ? 'Select category' : 'No category'}"}, {class: "form-control", :required => true} %></div>
    <div class="col-sm-89"><button type="button" id="add_cate"><span class="glyphicon glyphicon-plus"></span></button></div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label text-right">Price</label>
      <div class="col-sm-8"><%= f.number_field :price , :class => "form-control", :placeholder=>"" , :required => true, :pattern=> "^([1-9]*)(\.[0-9])?$" %></div>
    </div>
    <div class="form-action text-right">
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  <%end%>
  <div class="modal fade" data-backdrop="static" data-keyboard="false" id="category-modal">
      <div class="modal-content1">
        
        <%= form_for :category, :url => categories_path,:remote=>true do |c| %>
        <br>
        <div class="top-in-1">
            <%= c.text_field :category , :class => "form-control", :placeholder=>"Add Category" , :required => true%>
          </div>
          <div class="modal-body top-in-2">
            <button type="button" class="btn btn-default" data-dismiss="modal"> Cancel</button>
            <button type="submit" class="btn btn-primary"> Add </button>
          </div>
        <%end%>
      </div>
  </div>