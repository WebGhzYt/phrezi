<section class="signup">
  <div class="container">
    <div class="signup-wrapper marginTop">
      <div class="signup-banner">
        <div class="co-xs-12">
          <h2 class="fontSize54">Welcome to Phrenzi, a game worth playing!</h2>
          <p>It pays to be loyal.</p>
        </div>
      </div>
      <div class="signup-head">
        <div class="col-sm-3">
          <h2>Sign Up</h2>
        </div>
      </div>
      <div class="signup-form">
        <div class="col-xs-12">
          <%=  form_for(:user, :url=> registration_path(:user), :html=> { :class=> "form-horizontal"},:remote=>true) do |f|%>
            <div class="form-group">
              <label class="col-sm-3 control-label">First Name</label>
              <div class="col-sm-5">
                <%= f.text_field :name, :required=> true, :class=> "form-control", :placeholder=> "First Name"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Last Name</label>
              <div class="col-sm-5">
                <%= f.text_field :last_name, :required=> true, :class=> "form-control", :placeholder=> "Last Name"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Email</label>
              <div class="col-sm-5">
                <%= f.text_field :email, :required=> true, :class=> "form-control", :placeholder=> "Email"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Password</label>
              <div class="col-sm-5">
                <%= f.password_field :password, :required=> true, :class=> "form-control", :placeholder=> "Password"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Confirm Password</label>
              <div class="col-sm-5">
                <%= f.password_field :password_confirmation, :required=> true, :class=> "form-control", :placeholder=> "Confirm Password"%>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-5">
                <%=f.submit "Sign Up", :class => "btn btn-default btn-yellow"%>
              </div>
            </div>
          <%end%>
        </div>
      </div>
      <div class="signup-info">
        <div class="col-sm-5 col-sm-offset-3">
          <p>By clicking Sign Up you agree to our <a href="/terms">privacy and terms</a> .  You also confirm that you have read and agree with our data use policy.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
<%if !session[:confirmed].blank?%>
    var confirmed = true
  <%session[:confirmed] = nil%>
<%end%>
</script>